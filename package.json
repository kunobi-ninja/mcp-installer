{
  "name": "@kunobi/mcp-installer",
  "version": "0.0.0",
  "description": "Reusable MCP server installer â€” interactive CLI to register servers with AI clients",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunobi-ninja/mcp-installer.git"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-installer": "dist/cli.js"
